{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "module": "ES6",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "dist",
        "removeComments": false,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES6",
        "typeRoots": ["src"]
    },
    "include": ["src/**/*.ts", "index.d.ts"],
    "exclude": ["--*"]
}
